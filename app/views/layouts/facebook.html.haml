!!! html
%html
  %head
    %title Purmoments
    = stylesheet_link_tag    "facebook", :media => "all"
    = javascript_include_tag "facebook"
    = csrf_meta_tags
  %body
    #fb-root
    :javascript
      window.fbAsyncInit = function() {
        FB.init({
          appId     : '465089766897235',
          //channelUrl: '//purmoments.herokuapp.com/facebook/channel.html',
          status    : true,
          cookie    : true,
          xfbml     : true
        });

        FB.getLoginStatus(function(response) {
          if (response.status === 'connected') {
            testAPI();
            console.log('tested')
          } else if (response.status === 'not_authorized') {
            login();
          } else {
            login();
          }
        });

        function testAPI() {
            console.log('Welcome!  Fetching your information.... ');
            FB.api('/me', function(response) {
                console.log('Good to see you, ' + response.name + '.');
            });
        };
      };

      (function(d) {
        var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0]
        if (d.getElementById(id)) {return;}
        js = d.createElement('script'); js.id = id; js.async = true;
        js.src = "//connect.facebook.net/en_US/all.js";
        ref.parentNode.insertBefore(js, ref);
      }(document));


    .container.facebook_container
      .row
        %ul#header
          %li.left= link_to 'CONTEST PRIZES', facebook_prizes_path
          %li= link_to 'HOW TO PLAY'
          %li= link_to 'FRANCAIS'
      .row
        #banner
          = image_tag('facebook_logo.png')
          = image_tag('facebook_purmoments_logo.png')
      .row-fluid
        .span20
          #facebook_app_container
            #inner_content
              = yield
      .row-fluid
        .span20
          .row-fluid
            .span20
              %ul#footer
                %li.left= link_to I18n.t('navigation.footer.terms_of_use'), main_app.terms_of_use_path
                %li= link_to I18n.t('navigation.footer.rules'), main_app.how_to_play_path
                %li= link_to I18n.t('navigation.footer.privacy_policy'), main_app.privacy_policy_path
                %li= link_to "www.lactantia.ca", 'http://www.lactantia.ca'
                %li= link_to I18n.t('navigation.footer.contact'), main_app.ajo_contact_path
                %li.right= link_to I18n.t('navigation.footer.french')
              #footer_notes
                = t('navigation.footer.trademarks')
        .span6
          #logo= image_tag('parmalat_logo.png')